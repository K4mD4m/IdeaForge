generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  comments       Comment[]
  ideas          Idea[]
  likes          Like[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
}

model Idea {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  description String
  category    String?
  tags        String[]  @default([])
  createdById String
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  upvotes     Int       @default(0)
  views       Int       @default(0)
  comments    Comment[]
  createdBy   User      @relation(fields: [createdById], references: [id])
  likes       Like[]

  @@index([createdAt])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  ideaId    String
  authorId  String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])
  idea      Idea     @relation(fields: [ideaId], references: [id])
}

model Like {
  id     String @id @default(cuid())
  userId String
  ideaId String
  idea   Idea   @relation(fields: [ideaId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}
